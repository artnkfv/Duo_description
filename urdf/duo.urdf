<?xml version="1.0"?>

<robot name="duo">
  <!-- Link Definitions -->
  <link name="base_reference">
    <!-- This link is an invisible reference link -->
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.001"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <link name="dummy_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.02083333333333333" ixy="0" ixz="0" iyy="0.010833333333333334" iyz="0" izz="0.03083333333333333"/>
    </inertial>
  </link>  
  
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.5 0.7 0.1"/>
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 0.7 0.1"/>
      </geometry>
    </collision>
  </link>

  <link name="left_wheel">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0002708333333333334" ixy="0" ixz="0" iyy="0.0002708333333333334" iyz="0" izz="0.0005000000000000001"/>
    </inertial>  
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>
  </link>

  <link name="right_wheel">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.0002708333333333334" ixy="0" ixz="0" iyy="0.0002708333333333334" iyz="0" izz="0.0005000000000000001"/>
    </inertial>  
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>
  </link>

  <link name="caster_wheel">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="3.291666666666667e-05" ixy="0" ixz="0" iyy="3.291666666666667e-05" iyz="0" izz="6.250000000000001e-05"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.050" length="0.02"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.050" length="0.02"/>
      </geometry>
    </collision>
  </link>

  <link name="caster_mount">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="8.666666666666668e-05" ixy="0" ixz="0" iyy="8.666666666666668e-05" iyz="0" izz="0.00016666666666666672"/>
    </inertial>  
    <visual>
      <geometry>
        <box size="0.1 0.1 0.02"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
  </link>

  <!-- Joint Definitions -->
  <joint name="base_reference_to_base_link" type="fixed">
    <parent link="base_reference" />
    <child link="base_link" />
    <origin xyz="0 0 0.17" rpy="0 0 0" /> <!-- Adjust the height here -->
  </joint>

  <joint name="base_link_to_dummy_link" type="fixed">
    <parent link="base_link" />
    <child link="dummy_link" />
    <origin xyz="0 0 0" rpy="0 0 0" />
  </joint> 

  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="-0.277 -0.13 -0.07" rpy="0 1.5708 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0.277 -0.13 -0.07" rpy="0 1.5708 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="caster_mount_joint" type="continuous">
    <parent link="base_link"/>
    <child link="caster_mount"/>
    <origin xyz="0 0.25 -0.062" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="caster_wheel_joint" type="continuous">
    <parent link="caster_mount"/>
    <child link="caster_wheel"/>
    <origin xyz="0 0 -0.06" rpy="0 1.5708 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Diff Drive Plugin -->
  <gazebo>
  <plugin name="ignition::gazebo::systems::DiffDrive" filename="libignition-gazebo-diff-drive-system.so">
    <left_joint>left_wheel_joint</left_joint>
    <right_joint>right_wheel_joint</right_joint>
    <wheel_separation>0.5</wheel_separation>
    <wheel_radius>0.1</wheel_radius>
    <topic>/cmd_vel</topic>
    <odom_topic>/odom</odom_topic>
    <odometry_frame>odom</odometry_frame>
    <robot_base_frame>base_footprint</robot_base_frame>
    <update_rate>100</update_rate>
  </plugin>
</gazebo>
</robot>
