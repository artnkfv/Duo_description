<?xml version="1.0"?>
<!-- <robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="duo"> -->
<robot name="duo">
  <!-- Link Definitions -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.5 0.7 0.1"/>
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 0.7 0.1"/>
      </geometry>
    </collision>
  </link>

  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>
  </link>

  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1" length="0.05"/>
      </geometry>
    </collision>
  </link>

  <link name="caster_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.060" length="0.02"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.060" length="0.02"/>
      </geometry>
    </collision>
  </link>

  <link name="caster_mount">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.02"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
  </link>

  <!-- Joint Definitions -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="-0.277 -0.07 -0.07" rpy="0 1.5708 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0.277 -0.07 -0.07" rpy="0 1.5708 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="caster_mount_joint" type="continuous">
    <parent link="base_link"/>
    <child link="caster_mount"/>
    <origin xyz="0 0.25 -0.07" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="caster_wheel_joint" type="continuous">
    <parent link="caster_mount"/>
    <child link="caster_wheel"/>
    <origin xyz="0 0 -0.03" rpy="0 1.5708 0"/>
    <axis xyz="0 0 1"/>
  </joint>

</robot>
